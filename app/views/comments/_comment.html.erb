
<div class="be-comment-block mt-4">
	<div class="be-comment">
		<div class="be-img-comment">	
			<a>
				<img src="https://www.computerhope.com/jargon/g/guest-user.jpg" alt="" class="be-ava-comment">
			</a>
		</div>
		<div class="be-comment-content">
			<span class="be-comment-name">
				<a style="color: white;"><%= comment.name %></a>
			</span>
			<span class="be-comment-time">
				<i class="fa fa-clock-o"></i>
				<%= comment.created_at %>
			</span>
			<p class="be-comment-text">
				<%= comment.comment %>
			</p>
            <!--<%= link_to 'Delete', [comment.image, comment],
                  method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>-->
		</div>
	</div>
</div>